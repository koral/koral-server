{
  "extends": "eslint:recommended",

  "env": {
    "node": true
  },

  "parser": "babel-eslint",

  "rules": {
    "strict": 0,
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-new-func": 0,
    "key-spacing": 0,
    "consistent-return": 0,
    "no-proto": 0,
    "no-multi-spaces": 0,
    "no-constant-condition": 0,
    "new-cap": 0,
    "no-alert": 0,
    "no-warning-comments": [0, { "terms": ["todo", "fixme"], "location": "start" }],
    "no-console": 0,

    "semi": 1,
    "comma-dangle": [1, "always-multiline"],
    "indent": [1, 2, { "SwitchCase": 1 }],
    "max-len": [1, 80, 2],
    "eol-last": 1,
    "camelcase": 1,
    "no-unused-vars": 1,
    "no-empty": 1,
    "no-irregular-whitespace": 1,
    "max-params": [1, 4],
    "curly": [1, "multi-line"],
    "semi-spacing": [1, { "before": false, "after": true }],

    "no-extend-native": 2,
    "eqeqeq": [2, "smart"],
    "guard-for-in": 2,
    "max-depth": [2, 5],
    "no-debugger": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-void": 2,
    "no-extra-boolean-cast": 2,
    "no-func-assign": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-sparse-arrays": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "no-unexpected-multiline": 2,
    "guard-for-in": 2,
    "block-scoped-var": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-implied-eval": 2,
    "no-lone-blocks": 2,
    "no-with": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new-wrappers": 2,
    "no-eval": 2,
    "no-dupe-keys": 2,
    "curly": [2, "multi-line"],
    "wrap-iife": [2, "inside"],
    "no-redeclare": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-use-before-define": [2, "nofunc"],
    "callback-return": 2,
    "no-caller": 2,
    "no-new": 2,
    "quotes": [2, "double"],
    "no-undef": 2,
    "radix": 2,
    "wrap-iife": [2, "inside"],
    "yoda": [2, "never"],
    "no-shadow": 2,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 2,
    "dot-notation": 2,
    "dot-location": [2, "property"],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "always"]
  },

  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "regexUFlag": true,
    "regexYFlag": true,
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": true,
    "jsx": true
  },

  "globals": {
  }
}
